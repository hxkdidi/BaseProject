<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/text1</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <style name="TextStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">@dimen/sp18</item>

    </style>

    <style name="Null" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="Activity_Anim" parent="@android:style/Animation.Activity">

    </style>

    <style name="navigation_item">

        <item name="android:textSize">14sp</item>

    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
